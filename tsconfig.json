{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "package/**/*", "package/**/*.ts", "package/**/*.vue"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": false,
    "jsx": "preserve",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["package/*"]
    }
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
